<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Fusion Tuition centre</title>
    <meta name="description" content="Fusion Tuition centre">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="apple-icon.png">
    <link rel="shortcut icon" href="favicon.ico">


    <link rel="stylesheet" href="../backend/vendors/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../backend/vendors/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="../backend/vendors/themify-icons/css/themify-icons.css">
    <link rel="stylesheet" href="../backend/vendors/flag-icon-css/css/flag-icon.min.css">
    <link rel="stylesheet" href="../backend/vendors/selectFX/css/cs-skin-elastic.css">

    <link rel="stylesheet" href="../backend/assets/css/style.css">

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>



</head>

<body class="bg-dark">


    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
                <div class="login-logo">
                    <a href="index.html">
                        <img class="align-content" src="images/logo.png" alt="">
                    </a>
                </div>
                <%if(message!=0){%>      
                    <div class="alert alert-danger" role="alert">
                         <%=message%> 
                     </div>
                      <%}%>
                     
                <div class="login-form">
                    <form action="/updatePassword" method="POST"  id="form" onsubmit="return validate();">
                        
                        <div class="form-group">
                            <label for="Username">Username <span class = "text-danger" >*</label>
                            <input type="text" class="form-control" name="uname"/>    
                            <%if(errors.length!=0){%>
                                <%errors.forEach((e) => {%>
                                    <%if(e.param === "uname"){%>
                                        <p class="text-danger" id="err-name"><%=e.msg%></p>
                                    <%}%>
                                <%})%>
                                <%}%>                 
                        </div>
                            <div class="form-group">
                                <label for="password"> New Password <span class = "text-danger" >*</label>
                                <input type="password" class="form-control" name="password">
                                <%if(errors.length!=0){%>
                                    <%errors.forEach((e) => {%>
                                        <%if(e.param === "password"){%>
                                            <p class="text-danger" id="err-name"><%=e.msg%></p>
                                        <%}%>
                                    <%})%>
                                    <%}%>
                                
                    </div>
                    <div class="form-group">
                        <label for="password"> Confirm Password <span class = "text-danger" >*</label>
                        <input type="password" class="form-control" name="Cpassword">
                        <%if(errors.length!=0){%>
                            <%errors.forEach((e) => {%>
                                <%if(e.param === "Cpassword"){%>
                                    <p class="text-danger" id="err-name"><%=e.msg%></p>
                                <%}%>
                            <%})%>
                            <%}%>
                       
            </div>
              
                       
                               
                                <div class="card-footer">
                                    <button type="submit" class="btn btn-success btn-sm">
                                         Login
                                    </button>
                                   
                                </div>
                           
                    </form>
                </div>
            </div>
        </div>
    </div>
   
            
    <script src="../backend/vendors/jquery/dist/jquery.min.js"></script>
    <script src="../backend/vendors/popper.js/dist/umd/popper.min.js"></script>
    <script src="../backend/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="../backend/assets/js/main.js"></script>


</body>

</html>
