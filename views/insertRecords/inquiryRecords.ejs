    function validate(){
        
    
        var name = document.getElementById('StudentsName').value.trim()
        var address = document.getElementById('address').value.trim()
        var classData = document.getElementById('inputClass').value
        var subject = document.getElementById('subject').value
        var contact = document.getElementById('phoneNumber').value.trim()
const formData = {
    name, address, classData, subject, contact
}



const value = Object.values(formData).map((item, index) => {
              if (item == "") {
                const data = Object.keys(formData)[index];
                console.log(data);
                document.getElementById(`${data}-error`).innerHTML = `**required ${data}`;

                return false;
              } else {
                const data = Object.keys(formData)[index];

                if (data === "name") {
                  if (!isNaN(item)) {
                    document.getElementById(
                      `${data}-error`
                    ).innerHTML = `**invalid ${data}`;

                    return false;
                  } else {
                    document.getElementById(`${data}-error`).innerHTML = ``;
                  }
                } else if (data === "contact") {
                  if (item.length < 9 || item.length < 10) {
                    document.getElementById(`${data}-error`).innerHTML = `**Invalid ${data}`;
                    return false;
                  } else {
                    document.getElementById(`${data}-error`).innerHTML = ``;
                  }
                } else {
                  document.getElementById(`${data}-error`).innerHTML = ``;
                }
              }
            });

            const bool = value.includes(false);
            console.warn(bool);
            if (bool) {
              return false;
            } else {
              return true;
            }
    }
</script>

