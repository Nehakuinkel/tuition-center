                        <p class="text-danger" id="address-error"></p> 
                        
                    </div>
                        <div class="form-group">
                             <label for="inputClass" class="form-label">Enter a Class <span class = "text-danger" >*</label>
                            <select name="inputClass" id="inputClass" class="form-select form-control" class="required">
                    <option selected disabled value="">Class</option>
                    <%classData.forEach((c)=>{%>
                      <option value="<%=c.id%>" ><%=c.name%></option>
                    <%})%>
                  </select>
                  <p class="text-danger" id="classData-error"></p> 
                  
                        </div>
                            <div class="form-group">
                                
                                <label for="subject" class="form-label">Subject Name <span class = "text-danger" >*</label>
                                <select name="subject" id="subject" class="form-select form-control" class="required">
                          <option selected disabled value="">Subject</option>
                          <%resu.forEach((s)=>{%>
                            <option value="<%=s.subject_id%>"><%=s.subject_name%></option>
                
                          <%})%>
                             </select>
                             <p class="text-danger" id="subject-error"></p> 
                             
                              </div>
                              <div class="form-group">
                                <label for="phoneNumber" class="form-label">Contact Number <span class = "text-danger" >*</label>
                                 <input type="number" class="form-control" name="phoneNumber" placeholder="Contact Number"  id="phoneNumber">
                                 <p class="text-danger" id="contact-error"></p> 
                                
                              </div>
                              <div class="form-group">
                              <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="enroll">
                                <label class="Enroll" for="gridCheck">
                                     Enroll
                                 </label>
                            </div>
                        </div>
                              <div class="card-footer">
                                <button type="submit" class="btn btn-success btn-sm">
                                     Add
                                </button>
                                <!-- <button type="reset" class="btn btn-danger btn-sm">
                                     Reset
                                </button> -->
                            </div>
