</head>
<body>
<%-include ('../partials/sidebar')%>
<div id="right-panel" class="right-panel">
    <!-- Header-->
     <header id="header" class="header">

        <div class="header-menu">

            <div class="col-sm-7">
                <!-- <a id="menuToggle" class="menutoggle pull-left"><i class="fa fa fa-tasks"></i></a> -->
                <div class="header-left">
                    
                </div>
            </div>

            <div class="col-sm-5">
                <div class="user-area dropdown float-right">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class=" menu-icon fa fa-user" aria-hidden="true"></i> Admin
                    </a>

                    
                </div>

               

            </div>
        </div>

    </header>
    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1>Inquiry</h1>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li class="active">Inquiry</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row ">
                <div class="col-md-6 offset-2 col-lg-6 offset-lg-3 div-wrapper justify-content-center align-items-center">

                    <div class="div-to-align">
            
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Update Information</strong>
                        </div>
                        <div class="card-body">
                    <form class="" method="post" action="/update/<%=data.id%>">
                    <div class="form-group">
                        
                        <label for="Students_name" class="form-label">Students Name <span class = "text-danger" >*</label>
                        <input type="text" class="form-control" name="StudentsName" value="<%=data.students_name%>" id="StudentsName">
                        <p class="text-danger" id="name-error"></p> 
                    </div>
    
                            <div class="form-group"> 
                                <label for="address" class="form-label">Address <span class = "text-danger" >*</label>
                                <input type="text" class="form-control" name="address" value = "<%=data.address%>" placeholder="enter a address" id="address" oninput="myFunction(event)">
                                <p class="text-danger" id="address-error"></p> 
                              </div>
                              <div class="form-group">
                                <label for="inputClass" class="form-label">Enter a Class <span class = "text-danger" >*</label>
                                  <select name="inputClass" class="form-select" >
                                    <%classData.forEach((c)=>{%>
                                        <option value = "<%=c.id%>"
                                            <%if(c.id==data.class){%>
                                                selected
                                            <%}%>>
                                            <%=c.name%> </option>
                                                     <%})%>
                                            </select>
                                     
                              </div>
                              <div class="form-group">
                                <label for="subject" class="form-label">Subject Name <span class = "text-danger" >*</label>
                                <select name="subject" class="form-select">
                                    <%resultArr.forEach((s)=>{%>
                                    <option value="<%=s.subject_id%>"
                                      
                                         <%if(s.subject_id==data.subject){%>
                                         selected
                                         <%}%>

                                    ><%=s.subject_name%></option>
                                    <%})%>   
                                </select>
                              </div>
                              <div class="form-group">
                                <label for="phoneNumber" class="form-label">Contact Number <span class = "text-danger" >*</label>
                                  <input type="number" class="form-control" name="phoneNumber" value = "<%=data.phone_number%>" placeholder="Contact Number" id="phoneNumber" oninput="myFunction(event)">
                                  <p class="text-danger" id="contact-error"></p> 
                              </div>
                              <div class="form-group">
                                <div class="form-check">
                                  <%if(data.enroll=="1"){%>
                                          <input class="form-check-input" type="checkbox" name="enroll" checked >  
                                  <%}else{%>
                                    
                                      <input class="form-check-input" type="checkbox" name="enroll" >  
                                    <%}%>
                                    <label class="Enroll" for="gridCheck">
                                      Enroll
                                    </label>
                                  </div>
                              </div>
                             
                              <div class="card-footer">
                                <button type="submit" class="btn btn-success btn-sm">
                                     Update
                                </button>
                                <!-- <button type="reset" class="btn btn-danger btn-sm">
                                     Reset
                                </button> -->
                            </div>
                                    </form>
                                   
                                  </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
            
                </div> <!-- .content -->
            </div><!-- /#right-panel -->
            </div>
            </div>
            </div>
            </div>
            </div><!-- .animated -->
            </div><!-- .content -->
            </div><!-- /#right-panel -->
            <!-- Right Panel -->
            
            
            
            <script src="../../backend/vendors/jquery/dist/jquery.min.js"></script>
            <script src="../../backend/vendors/popper.js/dist/umd/popper.min.js"></script>
            
            <script src="../../backend/vendors/jquery-validation/dist/jquery.validate.min.js"></script>
            <script src="../../backend/vendors/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
            
            <script src="../../backend/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
            <script src="../../backend/assets/js/main.js"></script>
            </body>
            </html>